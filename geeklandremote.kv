#:kivy 1.0.9
#:import gmtime time.gmtime
#:import strftime time.strftime


# --------------------------------------
# Templates
# --------------------------------------

<Spacer@Widget>:
	disabled: True

<NavButton@Button>:
	font_name: 'Glyph'
	font_size: '80sp'

<VideoButton@Button>:
	font_name: 'Glyph'
	font_size: '26sp'

<GlyphButton@Button>:
	font_name: 'Glyph'
	font_size: '26sp'

<GlyphButton2@Button>:
	background_color: (0,0,0,0)
	color: (0,0,0,0.3)
	padding: (5,0)
	text_size: self.size
	halign: 'right'
	font_name: 'Glyph'
	font_size: '20sp'

# --------------------------------------
# main panel
# --------------------------------------

<MainPanel>:
	orientation: 'vertical'

	Spacer:
	Label:
		text: strftime('time : %a, %d %b %Y %H:%M:%S +0000', gmtime())
	Label:
		text: 'IP :   ' + root.ip
	Spacer:
	Button:
		text: 'exit'
		on_press: quit()

# --------------------------------------
# weather panel
# --------------------------------------

<WeatherPanel>:
	orientation: 'vertical'

	Spacer:
	Label:
		text: str.format('temperature: {0}Â°C', root.temperature)
	Spacer:
	Button:
		text: 'update'
		on_press: root.getWeather()

# --------------------------------------
# video panel
# --------------------------------------

<VideoPanel>:
	padding: 5

	BoxLayout:
		spacing: 5
		orientation: 'vertical'

		GridLayout:
			cols:3
			spacing: 5
			padding: (40, 10)

			Spacer:
			NavButton:
				text: u'\uE253' # '^'
				on_press: root.kodiRemote('Input.Up')
			Spacer:
			NavButton:
				text: u'\uE251' # '>'
				on_press: root.kodiRemote('Input.Left')
			NavButton:
				text: u'\uE165' # 'ok'
				on_press: root.kodiRemote('Input.Select')
			NavButton:
				text: u'\uE250' # '<'
				on_press: root.kodiRemote('Input.Right')
			Spacer:
			NavButton:
				text: u'\uE252' # 'v'
				on_press: root.kodiRemote('Input.Down')

		BoxLayout:
			size_hint_y: 0.15
			spacing: 5

			VideoButton:
				text: u'\uE070' # 'l<'
				on_press: root.kodiRemote('Player.Goto', {'playerid': 1, 'to': 'previous'})
			VideoButton:
				text: u'\uE071' # '<<'
				on_press: root.kodiRemote('Player.SetSpeed', {'playerid': 1, 'speed': 'decrement'})
			VideoButton:
				text: u'\uE072\uE073' # 'play'
				on_press: root.kodiRemote('Player.PlayPause', {'playerid': 1})
			VideoButton:
				text: u'\uE074' # 'stop'
				on_press: root.kodiRemote('Player.Stop', {'playerid': 1})
			VideoButton:
				text: u'\uE075' # '>>'
				on_press: root.kodiRemote('Player.SetSpeed', {'playerid': 1, 'speed': 'increment'})
			VideoButton:
				text: u'\uE076' # '>l'
				on_press: root.kodiRemote('Player.Goto', {'playerid': 1, 'to': 'next'})

	Slider: # TODO
		orientation: 'vertical'
		disabled: True
		size_hint_x: 0.1

	BoxLayout:
		spacing: 5
		size_hint_x: 0.2
		orientation: 'vertical'

		GlyphButton:
			text: u'\uE021' # 'home'
			on_press: root.kodiRemote('Input.Home')
		GlyphButton:
			text: u'\uE095' # 'back'
			on_press: root.kodiRemote('Input.Back')
		GlyphButton:
			text: u'\uE177' # 'osd'
			on_press: root.kodiRemote('Input.ShowOSD')
		GlyphButton:
			text: u'\uE105' # 'info'
			on_press: root.kodiRemote('Input.Info')
		GlyphButton:
			text: u'\uE038' # 'volume +'
			on_press: root.kodiRemote('Application.SetVolume', {'volume': 'increment'})
		GlyphButton:
			text: u'\uE037' # 'volume -'
			on_press: root.kodiRemote('Application.SetVolume', {'volume': 'decrement'})
		GlyphButton:
			text: u'\uE036' # 'mute'
			on_press: root.kodiRemote('Application.SetMute', {'mute': 'toggle'})


# --------------------------------------
# light panel
# --------------------------------------

<LightSwitch>:
	size_hint_y: 0.2

	Label:
		size_hint_x: 0.4
		text: root.light.name
	Switch:
		id: is_on
		size_hint_x: 0.4
		active: root.light.on
		on_active: root.set_on(self.active)
	Slider:
		id: is_brightness
		max: 254
		step: 16
		disabled: not(is_on.active)
		value: root.light.brightness
		on_value: root.set_brightness(self.value)
	CheckBox:
		id: is_linked
		#active: True
		size_hint_x: 0.1


<LightPanel>:
	padding: 5
	orientation: 'vertical'

	BoxLayout:
		spacing: 5

		BoxLayout:
			ColorPicker:
				id: color_picker
				on_color: root.set_color()
				color: (0,0,0,0)

		BoxLayout:
			size_hint_x: 0.2
			orientation: 'vertical'

			GlyphButton2:
				text: u'\uE089' # 'select all'
				on_press: root.check_all(True)
			GlyphButton2:
				text: u'\uE088' # 'select none'
				on_press: root.check_all(False)
			GlyphButton2:
				text: u'\uE110' # 'inverse'
				on_press: root.check_all(None)
			Spacer
			Button:
				text: 'party' #u'\uE102'
				on_press: root.party()
			Button:
				text: 'on' #u'\uE013' # 'all on'
				on_press: root.all_on(True)
			Button:
				text: 'off' #u'\uE014'
				on_press: root.all_on(False)


